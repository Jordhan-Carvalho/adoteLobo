<% include ../partials/header.ejs %>

<div class="container">
    <div style="width:30%; margin: 0 auto;">
        <h1 style="margin-bottom:30px; margin-top:20px;">Editar <%= animal.name %></h1>
        
        <form action="/adote/<%= animal._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=animal.name%>" name="name">
            </div>    
            <div class="form-group">
                <input class="form-control" type="text" value="<%= animal.image%>" name="image">
            </div>
             <div class="form-group">
                <input class="form-control" type="number" value="<%= animal.price%>" name="price"  min="0.1" step="0.1">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= animal.description %>" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Enviar!</button>
            </div>    
        </form>
        
        <a href="/adote">Voltar</a>
        
        
        <% include ../partials/footer.ejs %>
    </div>
</div>