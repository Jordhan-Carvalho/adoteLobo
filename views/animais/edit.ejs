<% include ../partials/header.ejs %>

<div class="container">
    <div style="width:30%; margin: 0 auto;">
        <h1 style="margin-bottom:30px; margin-top:20px;">Editar <%= animal.name %></h1>
        
        <form action="/adote/<%= animal._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            
            <div class="form-group">
                <input class="form-control" type="text" value="<%=animal.name%>" name="name">
            </div>
            
            <div class="form-group">
                <label for="image">Foto principal</label>
                <input class="form-control" type="text" name="image" value="<%= animal.image%>">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" name="image2" value="<%= animal.image2%>">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" name="image3" value="<%= animal.image3%>">
            </div>
            
            <div class="form-group">
                <label for="exampleFormControlSelect2">Idade Relativa</label>
                <select class="form-control" id="exampleFormControlSelect2" name="age" value="<%=animal.age%>" required>
                  <option>Filhote</option>
                  <option>Jovem</option>
                  <option>Adulto</option>
                  <option>Idoso</option>
                </select>
            </div>
            
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="sex" id="inlineRadio1" value="Macho">
              <label class="form-check-label" for="inlineRadio1">Macho</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="sex" id="inlineRadio2" value="Fêmea">
              <label class="form-check-label" for="inlineRadio2">Fêmea</label>
            </div>
            
            <hr>
            
            <div class="form-group">
                <label for="exampleFormControlSelect1">Espécie</label>
                <select class="form-control" id="exampleFormControlSelect1" name="type" required>
                  <option>Cachorro</option>
                  <option>Gato</option>
                  <option>Ave</option>
                  <option>Réptil</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Descrição do animal</label>
                <textarea class="form-control rounded-0" id="exampleFormControlTextarea1" rows="10" name="description"  required><%=animal.description%></textarea>
            </div>
            <!--only admin can see-->
             <% if (currentUser && currentUser.isAdmin) { %>
             
             <p>Aprovar?</p>
              <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="approved" id="inlineRadio1" value="true">
              <label class="form-check-label" for="inlineRadio1">Sim</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="approved" id="inlineRadio2" value="false">
              <label class="form-check-label" for="inlineRadio2">Nao</label>
            </div>
            
            <% }; %>
            
            
            
            <div class="form-group">
                <button class="btn btn-primary btn-block">Enviar!</button>
            </div>    
        </form>
        
        <a href="/adote">Voltar</a>
        
        
        <% include ../partials/footer.ejs %>
    </div>
</div>