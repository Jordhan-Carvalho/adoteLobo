<% include ../partials/header.ejs %>



<div class="container-fluid">
    
    <div class="jumbotron text-center">
        <h1>Sejam bem-vindos à LOBO adote.</h1>
        <p>Adote ou contribua adicionando um animal para a lista!</p>
        <a href="/adote/novo" class="btn btn-primary btn-lg">Adicione um novo animal</a>
    </div>
    
 <!--fim do jumbotron -->
  
   <div class="row text-center">
    
    <% for (var i = 0; i<lista.length; i++) { %>
    
    <div class="col-sm-6 col-md-4 col-lg-3">
    <div class="card border-secondary mb-3">
  <img class="card-img-top img-thumbnail img-index" src="<%=lista[i].image%>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%=lista[i].name%></h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="/adote/<%= lista[i]._id %>" class="btn btn-primary">Mais informações</a>
  </div>
  </div>
  </div>
    
    
    <% }; %>
   </div>
   
   
   <nav aria-label="Page navigation">
    <% if (pages && pages > 0) { %>
    <ul class="pagination justify-content-center">
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link">Primeira</a></li>
        <% } else { %>
        <li><a class="page-link" href="/adote">Primeira</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link">«</a></li>
        <% } else { %>
        <li><a class="page-link" href="/adote?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a class="page-link"><%= i %></a></li>
        <% } else { %>
        <li><a class="page-link" href="/adote?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">»</a></li>
        <% } else { %>
        <li><a class="page-link" href="/adote?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">Última</a></li>
        <% } else { %>
        <li><a class="page-link" href="/adote?page=<%= pages %>">Última</a></li>
        <% } %>
    </ul>
    <% } %>
</nav>

</div>

<% include ../partials/footer.ejs %>