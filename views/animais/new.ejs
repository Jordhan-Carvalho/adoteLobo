<% include ../partials/header.ejs %>

<div class="container">
    <div style="width:30%; margin: 0 auto;">
        <h1 style="margin-bottom:30px; margin-top:20px;">Novo animal</h1>
        
        <form action="/adote" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Nome" name="name">
            </div>    
          <div class="form-group">
                    <label for="image">Imagem</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Price" name="price" min="0.1" step="0.1">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Descrição do animal" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Enviar!</button>
            </div>    
        </form>
        
        <a href="/adote">Voltar</a>
        
        
        <% include ../partials/footer.ejs %>
    </div>
</div>

