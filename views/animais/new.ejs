<% include ../partials/header.ejs %>

<div class="container">
    <div style="width:45%; margin: 0 auto;">
        <h1 style="margin-bottom:30px; margin-top:20px;">Novo animal</h1>
        
        <form action="/adote" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Nome" name="name" required>
            </div>
            
            <div class="form-group">
                <label for="image">Foto principal</label><br>
                <input type="file" id="image" name="image" accept="image/*" required>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Link Foto 2" name="image2">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Link Foto 3" name="image3">
            </div>
            
            <div class="form-group">
                <label for="exampleFormControlSelect2">Idade Relativa</label>
                <select class="form-control" id="exampleFormControlSelect2" name="age" required>
                  <option>Filhote</option>
                  <option>Jovem</option>
                  <option>Adulto</option>
                  <option>Idoso</option>
                </select>
            </div>
            
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="sex" id="inlineRadio1" value="Macho">
              <label class="form-check-label" for="inlineRadio1">Macho</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="sex" id="inlineRadio2" value="Fêmea">
              <label class="form-check-label" for="inlineRadio2">Fêmea</label>
            </div>

            <hr>
            
            <div class="form-group">
                <label for="exampleFormControlSelect1">Espécie</label>
                <select class="form-control" id="exampleFormControlSelect1" name="type" required>
                  <option>Cachorro</option>
                  <option>Gato</option>
                  <option>Ave</option>
                  <option>Réptil</option>
                </select>
            </div>
            
            <p>Formas de contato <strong>(Preencher pelo menos uma opção)</strong></p>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Número de telefone" name="contact[tel]">
            </div>
            <div class="form-group">
                <input class="form-control" type="email" placeholder="Número de telefone" name="contact[email]">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Número do Whatsapp" name="contact[zap]">
            </div>
            
            </div>
            <div class="form-group" >
                <label for="exampleFormControlTextarea1">Descrição do animal</label>
                <textarea class="form-control rounded-0" id="exampleFormControlTextarea1" rows="10" name="description" required></textarea>
            </div>
            
            <div class="form-group " style="width:45%; margin: 0 auto;">
                <button class="btn btn-primary btn-block">Enviar!</button>
            </div>    
        </form>
        
        <a href="/adote">Voltar</a>
        
        
        <% include ../partials/footer.ejs %>
    
</div>

